{
    "parser": "@typescript-eslint/parser",
    "globals": {
        "globalThis": true
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": "off",
        "linebreak-style": 0,
        "quotes": ["off", "single"],
        "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
        "no-undef": ["warn"],
        "semi": "off",
        "no-extra-boolean-cast":"off",
        "no-useless-escape": "off",
        "no-async-promise-executor": "off"
    }
}